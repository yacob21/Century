<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.century.LoginActivity">
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content">
         <TextView
             android:paddingTop="10dp"
             android:layout_gravity="center_horizontal"
             android:text=""
             android:textSize="20sp"
             android:textColor="#fff"
             android:textStyle="bold"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <ImageView
             android:id="@+id/logo"
             android:layout_width="100dp"
             android:layout_height="88dp"
             android:layout_gravity="center_horizontal"
             android:padding="20dp"
             android:src="@drawable/century" />



     </LinearLayout>



     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical"
             android:weightSum="1">

             <EditText
                 android:id="@+id/etUsername"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="10dp"
                 android:ems="10"
                 android:hint="E-mail"
                 android:inputType="textPersonName" />

             <EditText
                 android:id="@+id/etPass"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/etUsername"
                 android:layout_centerHorizontal="true"
                 android:layout_margin="10dp"
                 android:ems="10"
                 android:hint="Kata Sandi"
                 android:inputType="textPassword" />

             <Button
                 android:id="@+id/btnLogin"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_below="@+id/etPass"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="30dp"
                 android:background="@drawable/roundbuttonorange"
                 android:maxHeight="55dp"
                 android:text="Masuk"
                 android:textColor="#ffffff"
                 android:textSize="20sp" />

             <Button
                 android:id="@+id/btnRegister"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_below="@+id/btnLogin"
                 android:layout_centerHorizontal="true"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/roundbuttonorange"
                 android:text="Daftar"
                 android:textColor="#ffffff"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvLupa"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textColor="#f47921"
                 android:padding="10dp"
                 android:layout_marginTop="10dp"
                 android:textStyle="bold" />

         </LinearLayout>

         <ProgressBar
             android:id="@+id/progressBar"
             style="?android:attr/progressBarStyle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginBottom="0.3in"
             android:visibility="gone" />

         <!--<com.facebook.login.widget.LoginButton-->
             <!--android:id="@+id/login_button"-->
             <!--android:visibility="gone"-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="60dp"-->
             <!--android:layout_gravity="center_horizontal|bottom"-->
             <!--android:padding="16dp" />-->

     </FrameLayout>
 </FrameLayout>

</LinearLayout>
