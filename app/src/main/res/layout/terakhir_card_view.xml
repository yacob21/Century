<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:background="#B0e7da"
    android:layout_width="165dp"
    android:layout_height="250dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">


    <RelativeLayout
        android:id="@+id/btnProduk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayout">

            <ImageView
                android:id="@+id/imgProduk"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvDiskon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:background="#01a3b2"
                android:textColor="#fff"
                android:layout_gravity="right"
                android:text="20%" />

        </FrameLayout>


        <TextView
            android:id="@+id/tvNamaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="5dp"
            android:textSize="12sp"
            android:ellipsize="marquee"
            android:lines="2"
            android:textStyle="bold"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHargaProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left|bottom"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="#f47920"
                    android:textSize="10.5sp"
                    android:textStyle="bold" />

                <!--<View-->
                <!--android:id="@+id/garis"-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="1dp"-->
                <!--android:visibility="gone"-->
                <!--android:layout_marginLeft="1dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@android:color/darker_gray" />-->
            </FrameLayout>


            <TextView

                android:id="@+id/tvHargaDiskon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:padding="5dp"
                android:textColor="#f47920"
                android:textSize="10.5sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>