<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.century.Register.PilihPetaPertama"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="1">

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLokasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:ems="10"
            android:hint="Search Lokasi Disini..."
            android:inputType="textPersonName"
            android:padding="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardListPetaPertama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.02" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/koneksiLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_gravity="center"
            android:layout_marginTop="1in"
            android:padding="10dp"
            app:srcCompat="@drawable/century" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Terjadi Kesalahan Koneksi"
            android:textColor="#000"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Silahkan Coba Lagi" />
        <ProgressBar
            android:id="@+id/pbKoneksi"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbuttonorange"
            android:text="COBA LAGI"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="#fff" />


    </LinearLayout>
</LinearLayout>
