<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.century.Profil.GantiPasswordActivity">

    <LinearLayout
        android:id="@id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="16dp">

        <!--<EditText-->
            <!--android:id="@+id/etLama"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:hint="Password Lama"-->
            <!--android:inputType="textPassword"-->
            <!--android:padding="25dp" />-->

        <EditText
            android:id="@+id/etBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kata Sandi Baru"
            android:inputType="textPassword"
            android:padding="25dp" />

        <EditText
            android:id="@+id/etKonfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Konfirmasi Kata Sandi Baru"
            android:inputType="textPassword"
            android:padding="25dp" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f47920"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:text="Simpan"
            android:textColor="#fff" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/koneksiLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_gravity="center"
            android:layout_marginTop="1in"
            android:padding="10dp"
            app:srcCompat="@drawable/century" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Terjadi Kesalahan Koneksi"
            android:textColor="#000"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Silahkan Coba Lagi" />
        <ProgressBar
            android:id="@+id/pbKoneksi"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbuttonorange"
            android:text="COBA LAGI"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="#fff" />


    </LinearLayout>

</LinearLayout>
